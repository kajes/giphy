{
  "name": "giphy",
  "author": "Lars Kajes <lars@kajes.se>",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/kajes/giphy.git",
  "license": "MIT",
  "scripts": {
    "build:styles": "node-sass --source-map true --output-style compressed src/styles/giphy.scss public/styles/main.css",
    "watch:styles": "node-sass --watch src/styles/giphy.scss public/styles/main.css",
    "browser": "browser-sync start --server ./public/ --files public/**/*",
    "all": "npm-run-all --parallel browser watch:styles"
  },
  "dependencies": {
    "browser-sync": "^2.18.6",
    "npm-run-all": "^4.0.1",
    "query-string": "^4.2.3"
  },
  "devDependencies": {
    "node-sass": "^4.3.0"
  }
}
