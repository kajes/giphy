doctype
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Giphy
    link(rel="shortcut icon", href="assets/images/favicon.png")
    link(rel="stylesheet", type="text/css", href="styles/main.css")
  body
    header(class="header")
     img(class="header__logo", src="assets/images/logo.gif", alt="The Giphy logo")

    main(class="giphy")
      form(class="search", id="search")
        input(type="text", class="search__input", name="search", placeholder="Search all the GIFs...")
        button(type="submit", class="search__button")
          img(src="assets/images/search.gif")

      div(class="gallery")
      p(class="not-found")

    footer(class="footer")
      p(class="footer__copyright")
        small &copy; #[a(href="https://yrgo.github.io", title="Visit Yrgo's GitHub page") Yrgo], högre yrkesutbildning Göteborg.

  script(src="assets/scripts/giphy.js")
